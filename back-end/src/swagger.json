{
  "openapi": "3.0.0",
  "info": {
    "title": "Burger Store - SaagaS",
    "description": "API da Burger Store",
    "version": "1.0.0",
    "contact": {
      "name": "Saagas Code",
      "email": "saagas.code@gmail.com",
      "url": "https://portfolio-saagas-code.vercel.app/"
    }
  },
  "paths": {
    "/products": {
      "post": {
        "tags": ["Products"],
        "summary": "Cria um produto",
        "description": "Cria um novo produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "price": {
                    "type": "string"
                  },
                  "category_id": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "saagas",
                  "price": "Matthew Oliver",
                  "category_id": "saagas.code@gmail.com",
                  "image": "hello8819"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "price": {
                        "type": "float"
                      },
                      "category_id": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Produto já existente."
          }
        }
      },
      "get": {
        "tags": ["Products"],
        "summary": "Lista todos os produtos",
        "description": "Lista todos os produtos existentes",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Procura produto pelo seu nome",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Procura produto por sua categoria (id)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "price": {
                        "type": "float"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "category_id": {
                        "type": "string"
                      },
                      "category": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "created_at": {
                            "type": "date"
                          }
                        }
                      }

                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories": {
      "post": {
        "tags": ["Categories"],
        "summary": "Cria uma categoria",
        "description": "Cria uma nova categoria",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Sanduiche"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Categoria já existente."
          }
        }
      },
      "get": {
        "tags": ["Categories"],
        "summary": "Lista todas as categorias",
        "description": "Lista todas as categorias existentes",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      }

                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
